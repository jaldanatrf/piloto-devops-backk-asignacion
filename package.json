{
  "name": "back-asignaciones",
  "version": "1.0.0",
  "description": "Backend para sistema de asignaciones con arquitectura hexagonal",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "startDEV": "env-cmd -f .env.dev nodemon index.js",
    "startPRE": "env-cmd -f .env.pre nodemon index.js",
    "local": "env-cmd -f .env.local nodemon index.js",
    "dev": "env-cmd -f .env.dev nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage:serve": "npx http-server coverage/lcov-report -p 8080 -o",
    "coverage:open": "start coverage/lcov-report/index.html",
    "test:manual:company": "node tests/e2e/manual/company/test-company-entity.js",
    "test:manual:roles": "node tests/e2e/manual/roles/test-role-endpoints.js",
    "test:manual:rules": "node tests/e2e/manual/rules/test-rule-entity.js",
    "test:manual:imports": "node tests/e2e/manual/general/test-imports.js",
    "test:auto-assignments": "node tests/e2e/auto-assignments/test-auto-assignments.js",
    "test:auto-assignments:quick": "node tests/e2e/auto-assignments/test-auto-assignments.js --quick",
    "check:auto-assignment-setup": "node scripts/check-auto-assignment-setup.js",
    "migrate": "node scripts/migrate.js",
    "migrate:status": "node scripts/migrate.js --status",
    "migrate:validate": "node scripts/migrate.js --validate",
    "db:init": "node scripts/init-database.js",
    "db:schema": "node scripts/generate-schema.js",
    "db:schema:output": "node scripts/generate-schema.js --output",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:dev": "pm2 start ecosystem.config.js --env development",
    "pm2:start:pre": "pm2 start ecosystem.config.js --env preproduction",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop back-asignaciones",
    "pm2:restart": "pm2 restart back-asignaciones",
    "pm2:reload": "pm2 reload back-asignaciones",
    "pm2:delete": "pm2 delete back-asignaciones",
    "pm2:logs": "pm2 logs back-asignaciones",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status",
    "pm2:flush": "pm2 flush"
  },
  "keywords": [
    "nodejs",
    "hexagonal-architecture",
    "clean-architecture"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.8",
    "axios": "^1.11.0",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mssql": "^11.0.1",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "env-cmd": "^11.0.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "pm2": "^6.0.10",
    "supertest": "^6.3.3"
  }
}
